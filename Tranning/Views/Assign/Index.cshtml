@{
    ViewData["Title"] = "Assign page";
    // co the code nhu trong controller
    Layout = "~/Views/Shared/_MainLayout.cshtml";

    bool statusAdd = Convert.ToBoolean(TempData["saveStatus"]);
    bool statusUpdate = Convert.ToBoolean(TempData["UpdateStatus"]);
    bool statusAdd2 = Convert.ToBoolean(TempData["saveStatus2"]);
    bool statusUpdate2 = Convert.ToBoolean(TempData["UpdateStatus2"]);
}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <h4 class="display-6">
            List Trainee assign to Course
        </h4>
        <a class="btn btn-primary btn-sm" href="@Url.Action("Add","Assign")"> Add assign trainee to course </a>

        <form asp-action="#" method="get">
            <div class="form-actions no-color">
                <p class="mb-0">
                    Find by name : <input class="border border-primary rounded" type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <button type="submit" class="btn btn-primary btn-sm mb-0">Search</button>
                    <a asp-action="Index"> Back to full list</a>
                </p>
            </div>
        </form>
        <hr/>

        @if (TempData["UpdateStatus"] != null)
        {
            @if (statusUpdate)
            {
                <div class="text-success my-2"> Update Successfully</div>
            }
            else
            {
                <div class="text-danger my-2"> Update Failure</div>
            }
        }

        @if (TempData["saveStatus"] != null)
        {
            @if (statusAdd)
            {
                <div class="text-success my-2"> Add Successfully</div>
            }
            else
            {
                <div class="text-danger my-2"> Add Failure</div>
            }
        }

        <table class="table-responsive table">
            <thead>
                <tr>
                    <th>TRAINEE</th>
                    <th>COURSE</th>
                    <th>STATUS</th>
                    <th>CREATED AT</th>
                    <th>UPDATED AT</th>
                    <th colspan="2" width="5%">ACTION</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.tc.Trainee_courseDetailLists)
                {
                    <tr>
                        <td>@item.traineeName</td>
                        <td>@item.courseName</td>  
                        <td>@item.status</td>
                        <td>@item.created_at</td>
                        <td>@item.updated_at</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="@Url.Action("Update","Assign", new { id = @item.id })">Edit</a>
                        </td>
                        <td>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","Assign", new { id = @item.id })">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
