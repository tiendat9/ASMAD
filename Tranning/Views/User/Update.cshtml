@model Tranning.Models.UserDetail

@{
    ViewData["Title"] = "Update User";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row vh-100">
    <div class="col-sm-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h5> Update User</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Update">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="role_id" class="control-label">Role</label>
                                <select class="form-control" asp-for="role_id">
                                    <option value="0">Admin</option>
                                    <option value="1">Training staff</option>
                                    <option value="2">Trainer</option>
                                    <option value="3">Trainee</option>
                                </select>
                                <span asp-validation-for="role_id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="extra_code">extra_code</label>
                                <input asp-for="extra_code" class="form-control" />
                                <span class="text-danger" asp-validation-for="extra_code"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="username">username</label>
                                <input asp-for="username" class="form-control" />

                                <span class="text-danger" asp-validation-for="username"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="password">password</label>
                                <input asp-for="password" class="form-control" />

                                <span class="text-danger" asp-validation-for="password"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="email">email</label>
                                <input asp-for="email" class="form-control" />

                                <span class="text-danger" asp-validation-for="email"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="phone">phone</label>
                                <input asp-for="phone" class="form-control" />

                                <span class="text-danger" asp-validation-for="phone"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="address">address</label>
                                <input asp-for="address" class="form-control" />

                                <span class="text-danger" asp-validation-for="address"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="gender" class="control-label"></label>
                                <select class="form-control" asp-for="gender">
                                    <option value="0">Male</option>
                                    <option value="1">Female</option>
                                </select>
                                <span asp-validation-for="gender" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="birthday">birthday</label>
                                <input asp-for="birthday" class="form-control" />

                                <span class="text-danger" asp-validation-for="birthday"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="status" class="control-label"></label>
                                <select class="form-control" asp-for="status">
                                    <option value="Active">Active</option>
                                    <option value="Deactive">Deactive</option>
                                </select>
                                <span asp-validation-for="status" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="full_name">full_name</label>
                                <input asp-for="full_name" class="form-control" />

                                <span class="text-danger" asp-validation-for="full_name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="education">education</label>
                                <input asp-for="education" class="form-control" />

                                <span class="text-danger" asp-validation-for="education"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="programming_laguague">programming_laguague</label>
                                <input asp-for="programming_laguague" class="form-control" />

                                <span class="text-danger" asp-validation-for="programming_laguague"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="toeic_score">toeic_score</label>
                                <input asp-for="toeic_score" class="form-control" />

                                <span class="text-danger" asp-validation-for="toeic_score"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="experience">experience</label>
                                <input asp-for="experience" class="form-control" />

                                <span class="text-danger" asp-validation-for="experience"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="department">department</label>
                                <input asp-for="department" class="form-control" />

                                <span class="text-danger" asp-validation-for="department"></span>
                            </div>
                        </div> 
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <button class="btn btn-primary btn-sm" type="submit">Save</button>
                                <a class="btn btn-info btn-sm" href="@Url.Action("Index","User")">Back to List</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
