@model Tranning.Models.TopicDetail

@{
    ViewData["Title"] = "Add Topic";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="row vh-100">
    <div class="col-sm-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h5> Add New Topic</h5>
            </div>
            <div class="card-body">
                <form enctype="multipart/form-data" asp-action="Add">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="name">Name</label>
                                <input asp-for="name" class="form-control" />
                                <span class="text-danger" asp-validation-for="name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="course_id">Course ID</label>
                                <select asp-for="course_id" class="form-control" asp-items="@(new SelectList(ViewBag.Stores, "Value", "Text"))">
                                </select>
                                <span class="text-danger" asp-validation-for="course_id"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="description">Description</label>
                                <textarea asp-for="description" class="form-control" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                                <label asp-for="videoFile" class="control-label">Videos</label>
                                <input type="file" class="form-control" asp-for="videoFile" />
                                <span class="text-danger" asp-validation-for="videoFile"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="documentsFile" class="control-label">Documents</label>
                                <input type="file" class="form-control" asp-for="documentsFile" />
                                <span class="text-danger" asp-validation-for="documentsFile"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="attach_fileFile" class="control-label">Attach File</label>
                                <input type="file" class="form-control" asp-for="attach_fileFile" />
                                <span class="text-danger" asp-validation-for="attach_fileFile"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="status" class="control-label">Status</label>
                                <select class="form-control" asp-for="status">
                                    <option value="Active">Active</option>
                                    <option value="Deactive">Deactive</option>
                                </select>
                                <span asp-validation-for="status" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="sm-12 col-md-6">
                            <button class="btn btn-primary my-3" type="submit"> Save </button>
                            <a class="btn btn-info ms-3 mb-0" href="@Url.Action("Index","Topic")">Back to lists</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>