@model Tranning.Models.TopicDetail

@{
    ViewData["Title"] = "Topic Detail page";
    Layout = "~/Views/Shared/_MainLayout.cshtml";

}
<div class="row">
    <div class="col-sm-12 col-md-12">
        <h4 class="display-6">
            @Model.name
            </h4>
        <a style="float: right" class="btn btn-secondary" href="@Url.Action("CourseDetail","Home", new { id = Model.course_id })">Back</a>
         <p>@Model.description</p>
         </br>
            @if (!string.IsNullOrEmpty(Model.videos))
            {
            <p>
                Video:

                <u><a class="text-primary" href="~/uploads/file/@Model.videos">Click to download</a> </u>
            </p>

            }

            @if (!string.IsNullOrEmpty(Model.documents))
            {
            <p>
                Document:
                <u><a class="text-primary" href="~/uploads/file/@Model.documents">Click to download</a> </u>

            </p>
        }

            @if (!string.IsNullOrEmpty(Model.attach_file))
            {
        <p>File:
                <u><a class="text-primary" href="~/uploads/file/@Model.attach_file">Click to download</a> </u>

               </p>
            }
</div>
</div>